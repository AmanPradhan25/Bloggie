@model List<Bloggie.Web.Models.Domain.Tag>

@{
}


<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>List of Tags-Admin Functionality</h1>
    </div>
</div>

<div class="container py5">
    @if (Model != null && Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Display Name</th>
                    @* <th>Project Type</th> *@
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var tag in Model)
                {
                    <tr>
                        <td>@tag.Id</td>
                        <td>@tag.Name</td>
                        <td>@tag.DisplayName</td>
                        @* <td>@ProjectTypeMaster.ProjectType</td> *@
                        <td>
                            <a asp-area="" asp-controller="AdminTags" asp-action="ViewTag" asp-route-Id="@tag.Id">View</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>          
    }
    else
    {
        <p>No Tags Found!</p>
    }
</div>